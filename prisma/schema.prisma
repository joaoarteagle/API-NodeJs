generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  userName  String
  weight    Float
  email     String
  password  String


@@map("user")
}

model Task{
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String
  created_at      DateTime? @default(now())
  //category        Categories @relation()
  associated_user Status

  @@map("task")

}

model Categories{
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  color String

  @@map("category")
}


enum Status{

    PENDENTE
    EM_ANDAMENTO 
    CONCLUIDA


}